class Televisao:
    def __init__(self):
        self.marca = "LG"
        self.volume = 0
    def aumentar(self):
        if(self.volume < 10):
            self.volume += 1
    def diminuir(self):
        if(self.volume > 0):
            self.volume -= 1
teve_nova = Televisao()
control = input("digite qual operacao deseja: ")
while(control < 3):
    if(control == 1):
        teve_nova.aumentar()
    elif(control == 2):
        teve_nova.diminuir()
    else:
        break
    


        
        
